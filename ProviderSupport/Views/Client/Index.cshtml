@model IEnumerable<ProviderSupport.Models.Client>

@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ClientFullName)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.PhoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmergencyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmergencyEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmergencyPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CounsPa.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientFullName)
        </td>     
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmergencyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmergencyEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmergencyPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CounsPa.Name)
        </td>      
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ClientID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ClientID })
        </td>
    </tr>
}

</table>
